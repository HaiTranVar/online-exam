<div class="form-group row nested-fields">
  <%= f.hidden_field :id %>
    <div class="col-md-1 field text-right">
      <%= f.check_box :is_correct %>
    </div>

    <div class="col-md-10 field">
      <%= f.text_field :content, class: "form-control", placeholder: t(".answer_content") %>
    </div>

    <div class="col-md-1">
      <%= link_to_remove_association raw('<i class="fa fa-minus"></i>'), f, class: "btn btn-default" %>
  </div>
</div>
