<h3><%= t ".question" %></h3>
<div class="a-answer">
  <div class="form-group">
    <%= label_tag :content, t(".content") %>
    <%= text_field_tag "content[]", nil, class: "form-control" %>
  </div>

  <% 4.times do |n| %>
    <div class="form-group">
        <%= label_tag :answer[n+1], t(".answer", time: n+1) %>
        <div class="row">
          <div class="col-md-1">
            <%= check_box_tag "correct[]",n+1 %>
          </div>
          <div class="col-md-11">
            <%= text_field_tag "answer[][#{n+1}]", nil , class: "form-control" %>
          </div>
        </div>
      </div>
  <% end %>
</div>
