<% provide :title, t(".all_users") %>
<h1 class="text-center"><%= t ".all_users" %></h1>

<%= will_paginate %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th rowspan="2"><%= t ".id" %></th>
      <th rowspan="2"><%= t ".user_name" %></th>
      <th rowspan="2"><%= t ".user_email" %></th>
      <th colspan="3" class="text-center"><%= t ".action" %></th>
    </tr>
    <tr>
      <th><%= t".view" %></th>
      <th><%= t".update" %></th>
      <th><%= t".delete" %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to user, class: "button" do %>
            <i class="fa fa-street-view"></i>
          <% end %>
        </td>

        <td>
          <%= link_to "#", class: "button" do %>
            <i class="fa fa-edit"></i>
          <% end %>
        </td>

        <td>
          <%= link_to "#", class: "button" do %>
            <i class="fa fa-user-times"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>
