<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>
      </div>


  <div class="form-group">
    <%= f.fields_for :answers do |answer| %>
      <%= answer.email_field :content, class: "form-control" %>
    <% end %>
  </div>
<% end %>
  </div>
</div>
